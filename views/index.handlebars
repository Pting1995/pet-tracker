<div class="container">

  <h1>What to eat?!</h1>

  <div class="row align-items-start">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h4>Foods that I haven't eaten!</h4>
          <ul>
            {{#each food}}
            {{#unless eaten}}
            {{> foods/food-block eaten=true}}
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Foods that I have eaten!</h4>
          <ol>
            {{#each food}}
            {{#if eaten}}
            <li>
              {{ name }}
            </li>
            {{/if}}
            {{/each}}
          </ol>
        </div>
      </div>


    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <h2>Add a Food!</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="comida">What type of food?</label>
          <input type="text" id="comida" name="name">
        </div>

        <div class="form-group">
          <label for="eaten">Have you eaten it?</label><br>
          <input type="radio" name="eaten" value="0" checked> Not Consumed (yet)<br>
          <input type="radio" name="eaten" value="1"> I've eaten that!
        </div>

        <button type="submit" class="btn btn-outline-success">Add Food</button>
      </form>
    </div>
  </div>



</div>